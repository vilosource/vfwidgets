# Development environment configuration for vfwidgets
# This file is used with direnv to automatically set up the development environment

# Use direnv's built-in Python layout
layout python3

# Set Python path to include current directory
export PYTHONPATH="${PWD}:${PYTHONPATH}"

# Development environment variables
export VFWIDGETS_DEV=1

# Optional: Set Qt debugging flags for development
# export QT_DEBUG_PLUGINS=1
# export QT_LOGGING_RULES="*.debug=true"

# Optional: UV package manager settings if using UV
# export UV_CACHE_DIR="${PWD}/.uv_cache"